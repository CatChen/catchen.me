div(class="row")
  div(class="col-md-4 mb-4")
    picture
      source(
        media="(max-width: 767.98px)"
        srcset="/images/profile_picture_360_240_3x.jpg 1080w, /images/profile_picture_360_240_2x.jpg 720w, /images/profile_picture_360_240_1x.jpg 360w"
        sizes="calc(100vw - 30px)"
      )
      img(
        src="/images/profile_picture_360_360_1x.jpg"
        srcset="/images/profile_picture_360_360_3x.jpg 1080w, /images/profile_picture_360_360_2x.jpg 720w, /images/profile_picture_360_360_1x.jpg 360w"
        sizes="(min-width: 1200px) 350px, (min-width: 992px) 290px, (min-width: 768px) 210px, calc(100vw - 30px)"
        class="img-fluid"
        alt="profile picture"
      )
  div(class="col-md-8")
    h2 #{introduction.title}
    p
      | #{introduction.text}
    h2 #{contacts.title}
    div(class="row mb-3")
      div(class="col-lg-3 col-sm-4 col-5") #{contacts.mobile}
      div(class="col-lg-9 col-sm-8 col-7 font-weight-bold")
        a(href="tel:+1-(646)-833-8693") +1-(646)-833-8693
      div(class="col-lg-3 col-sm-4 col-5") #{contacts.mobileTextOnly}
      div(class="col-lg-9 col-sm-8 col-7 font-weight-bold")
        a(href="tel:+86-13824432994") +86-13824432994
      div(class="col-lg-3 col-sm-4 col-5") #{contacts.email}
      div(class="col-lg-9 col-sm-8 col-7 font-weight-bold")
        a(href="mailto:catchen@catchen.me") catchen@catchen.me
    h2 #{links.title}
    div(class="row mb-3")
      div(class="col-lg-3 col-sm-4 col-5") GitHub
      div(class="col-lg-9 col-sm-8 col-7 font-weight-bold")
        a(href="https://github.com/catchen") catchen
      div(class="col-lg-3 col-sm-4 col-5") Twitter
      div(class="col-lg-9 col-sm-8 col-7 font-weight-bold")
        a(href="https://twitter.com/catchen") @catchen
