{
  "name": "catchen.me",
  "version": "1.0.0",
  "description": "This is the source code that can be compiled into the static site behind catchen.me.",
  "main": "index.js",
  "dependencies": {
    "autoprefixer": "^9.8.6",
    "harp": "^0.32.0",
    "postcss-cli": "^7.1.1"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "prettier": "2.1.1",
    "pretty-quick": "^2.0.1"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "harp compile . && npx postcss www/css/*.css --use autoprefixer -d www/css/",
    "start": "harp server .",
    "prettier": "prettier --write public/**/*.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {},
  "repository": {
    "type": "git",
